<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".descricaoActivity">

    <ImageView
        android:id="@+id/iv_cpf"
        android:layout_width="71dp"
        android:layout_height="56dp"
        android:layout_marginTop="56dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_doc"
        app:srcCompat="@drawable/address_card"
        app:tint="@color/colorPrimary" />

    <TextView
        android:id="@+id/tv_header"
        android:layout_width="371dp"
        android:layout_height="30dp"
        android:layout_marginTop="104dp"
        android:text="Secretária Municipal de Educação"
        android:textColor="#FF192133"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tv_desc"
        android:layout_width="371dp"
        android:layout_height="30dp"
        android:layout_marginTop="4dp"
        android:text="Solicite a emissão do seu Histórico Escolar."
        android:textColor="#FF192133"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <ImageView
        android:id="@+id/iv_rg"
        android:layout_width="71dp"
        android:layout_height="70dp"
        android:layout_marginTop="46dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.661"
        app:layout_constraintStart_toEndOf="@+id/iv_cpf"
        app:layout_constraintTop_toBottomOf="@+id/tv_doc"
        app:srcCompat="@drawable/identification"
        app:tint="@color/colorPrimary" />

    <Button
        android:id="@+id/btList"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="88dp"
        android:background="@color/colorPrimary"
        android:text="Listar"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_cpf"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="40dp"
        android:text="CPF"
        android:textColor="#FF192133"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_cpf" />

    <TextView
        android:id="@+id/tv_rg"
        android:layout_width="19dp"
        android:layout_height="30dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="94dp"
        android:text="RG"
        android:textColor="#FF192133"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_rg" />

    <TextView
        android:id="@+id/tv_doc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Documentos Necessários"
        android:textColor="#FF192133"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_desc" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="_____"
        android:textColor="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_header"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="_____"
        android:textColor="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_doc"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tv_cpf_desc"
        android:layout_width="171dp"
        android:layout_height="45dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="20dp"
        android:text="Os números do seu CPF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_cpf" />

    <TextView
        android:id="@+id/tv_rg_desc"
        android:layout_width="146dp"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="32dp"
        android:text="Os números do seu RG"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_rg" />

</androidx.constraintlayout.widget.ConstraintLayout>